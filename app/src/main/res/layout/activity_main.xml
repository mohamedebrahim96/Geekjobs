<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/design"
    android:fitsSystemWindows="true"
    tools:context="com.vacuum.app.geekjobs.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:id="@+id/login_layout"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/shape3"
            android:rotationX="180"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                >
                <EditText
                    android:id="@+id/editText"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:hint="البريد الالكتروني"
                    android:theme="@style/MyEditTextTheme"
                    android:textColor="#fff"
                    fontPath="fonts/gesstwo.otf"
                    android:textColorHint="#fff"
                    />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/if_icons_email_1564504"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"/>
            </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:layout_marginLeft="30dp"
    >

    <EditText
        android:id="@+id/editText2"
        android:layout_width="250dp"
        android:theme="@style/MyEditTextTheme"
        android:layout_height="wrap_content"
        android:hint="كلمة المرور"
        fontPath="fonts/gesstwo.otf"
        android:textColor="#fff"
        android:textColorHint="#fff" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/if_icons_password_1564520"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        />
</LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="40dp"

                >

                <Button
                    android:id="@+id/button"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn"
                    android:backgroundTint="#0008fc"
                    android:elevation="10dp"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:text="تسجيل الدخول"
                    fontPath="fonts/gesstwo.otf"
                    android:textColor="#fff" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="هل نسيت كلمة الباسورد"
                    android:textColor="#b2ffffff"
                    android:layout_gravity="bottom"
                    android:textSize="12sp"
                    android:layout_margin="10dp"
                    android:gravity="bottom"
                    fontPath="fonts/gesstwo.otf"
                    />
            </LinearLayout>

    </LinearLayout>

    </RelativeLayout>



    <Button
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:background="@drawable/btn"
        android:text="Video"
        android:textColor="#fff"
        android:layout_below="@+id/login_layout"
        />
</RelativeLayout>
